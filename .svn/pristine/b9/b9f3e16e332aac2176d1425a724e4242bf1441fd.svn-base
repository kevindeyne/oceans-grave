<!DOCTYPE HTML>
<html xmlns:th="http://www.thymeleaf.org">
<head>
    <title>Station Prototype</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
    <script src="js/ion.sound.min.js"></script>
    <script src="js/sound_manager.js"></script>
    <script src="js/station.js"></script>
    <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:300' rel='stylesheet' type='text/css'/>
    <link rel="stylesheet" type="text/css" href="css/fonts/flaticon.css"/>
    <link rel="stylesheet" href="css/station.css" type="text/css" />
	<script th:inline="javascript">
	/*<![CDATA[*/

	/*]]>*/
	</script>
</head>
<body>
	<div id="background"></div>
	
	<div th:replace="fragments/menu :: menu">&nbsp;</div>
	
	<h1><span id="station-name" th:text="${stationName}"></span> // The Docking Bay</h1>
	
	<p id="station-description" th:text="${description}"></p>
	
	<div id="characters">
		<h2>Characters</h2>
				
		<div class="character-item" th:each="character : ${characters}">
			<div class="character-portrait"></div>
			<h3 th:text="${character.name}"></h3>
			<p th:text="${character.description}"></p>
			<p><a th:href="'/conversation/char/' + ${character.id}">Talk</a></p>
		</div>

	</div>
	
	<div id="places-of-interest">
		<h2>Places of interest</h2>
	</div>
	
	<div class="poi-item" th:each="poi : ${pois}">
			<div class="poi-portrait"></div>
			<h3 th:text="${poi.name}"></h3>
			<p th:text="${poi.description}"></p>
			<p><a th:href="'/conversation/poi/' + ${poi.id}">Interact</a></p>
		</div>
	
	<div id="audio-control" class="off"><i class="flaticon-volumeoff"></i></div>
</body>
</html>