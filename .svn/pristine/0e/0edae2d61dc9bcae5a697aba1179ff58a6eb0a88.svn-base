#skill-description{
	display:block;
	height:100px;
	width:725px;
	clear:both;
	margin-left:6px;
	opacity:0;
}

#skillset{
	position:absolute;
	bottom:4%;
	left:50%;
	margin-left:-385px;
}

.skill{
	margin:5px;
	display:block;
	background-color:#06171e;
	width:106px;
	height:106px;
	cursor:pointer;
	float:left;
	opacity:0.90;
	
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
}

.skill:hover{
	opacity:1;
}

.skill.disabled, .skill.cooldown{
	color:#353d32;
	cursor:default;
	opacity:0.5;
}


